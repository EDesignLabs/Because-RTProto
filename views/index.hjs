<!DOCTYPE html>
<html lang="en">
<head>
  <title>{{ title }}</title>
  <meta http-equiv="X-UA-Compatible" content="IE=9">

  <!-- Load the basic libraries. -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js"></script>
  <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/tabletop.js/1.1.0/tabletop.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/rickshaw/1.2.1/rickshaw.min.js"></script>


  <!-- Load the Realtime libraries. -->
  <script>
    window.GOOGLE_API_CLIENT_ID = "{{ clientId }}";

  </script>
  <script type="text/javascript" src="https://apis.google.com/js/api.js"></script>


  <script data-main="javascripts/main" src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.5/require.min.js"></script>

  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet">
  <link href="/stylesheets/style.css" rel="stylesheet">

</head>

<!-- Start Realtime when the body has loaded. -->
<body>
  <div class="container">
    <div class="row control">
      <div class="span4 metadata">
        <h1 class="title"></h1>
        <article class="description"></article>
      </div>

      <div data-toggle="buttons-radio" class="span4 toolbar btn-group">
        <button id="view-tool" class="btn active">View</button>
        <button id="marker-tool" class="btn">Marker</button>
        <button id="note-tool" class="btn">Note</button>
        <button id="move-tool" class="btn">Move</button>
        <button id="delete-tool" class="btn">Delete</button>
      </div>

      <div class="span4 add">
        <button id="display-context-creator" class="btn">Add a context</button>
      </div>

      <div id="note-creator" class="modal hide fade add">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 id="note-creator-title">New Note</h3>
        </div>
        <div class="modal-body">
          <div class="thumbnail"></div>
          <div class="edit">
            <label for="title">Title</label><input id="title" name="title">
            <label for="url">URL</label><input id="url" name="url">
            <label for="desc">Description</label><textarea id="desc" name="desc"></textarea>
          </div>
          <div class="view">
            <p><a class="url" target="_blank"></a></p>
            <article class="description"></article>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          <button id="add-note" class="btn btn-primary">Save</button>
          <button id="edit-note" class="btn btn-primary">Save</button>
        </div>
      </div>
      <div id="context-creator">
        <a href="#" class="hide-modal">&times;</a>
        <label for="image-url">Image URL</label><input id="image-url" name="url">
        <label for="document-title">Title/Question</label><input id="document-title" name="title">
        <label for="document-desc">Description</label><textarea id="document-desc" name="desc"></textarea>
        <button id="add-context" class="btn">Send</button>
      </div>

    </div>

    <div class="row">
      <div class="span11 workspace-container">
      </div>
      <div id="collaborators" class="span1">
        <button id="authorizeButton" class="btn" disabled>You must authorize</button>
      </div>
    </div>

  </div>

</body>
</html>
