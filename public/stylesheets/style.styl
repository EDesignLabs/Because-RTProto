body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

#notes
  height 800px

#note-creator
  display none
  position absolute
  background #eee
  padding 1em
  right 0

  &.active
    display block

#context-creator
  display none
  position absolute
  background #eee
  padding 1em
  right 0

  &.active
    display block

#notes-list
  height 250px
  overflow-y scroll

.collaborator
  padding 5px
  color white

.note
  width 150px
  height 30px
  border 1px solid #eee
  padding 5px

  h2
    font-size 1em
    line-height 1em


.note-item

  h2
    font-size 1.5em
    line-height 1.5em

svg
  &.move
    cursor move
  &.delete
    cursor not-allowed
