body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.control
  .btn-group-vertical
    .btn
      width: 100%

  .logo
    min-height 51px
    background-image url(/images/logo.png)
    background-position-y 10px
    background-repeat no-repeat
    background-size contain

  .title
    font-size 20px
    line-height 20px

.toolbar
  .owner
    padding 10px 0 0 0
  .display-context-creator
    display: none


.metadata
  margin-bottom 5px
  border-bottom 1px solid #eee

  div
    position relative

  .description
    position absolute
    width 350px
    background #eee
    z-index 2
    padding 10px
    height auto
    overflow-y hidden
    white-space nowrap
    text-overflow ellipsis

    p:first-child
      display block
      text-overflow ellipsis
      white-space nowrap
      overflow-x hidden

    p
      display: none

    &:hover
      white-space normal

      p:first-child
        text-overflow inherit
        white-space normal
        overflow-x inherit

      p
        display block

#notes
  height 100%

#note-creator
  display none
  position absolute
  background #eee
  padding 1em
  right 0

  &.active
    display block

  &.add
    .edit
      display block
    .view
      display none
    .thumbnail
      display block
    #add-note
      display inline-block
    #edit-note
      display none

  &.edit
    .edit
      display block
    .view
      display none
    .thumbnail
      display block
    #add-note
      display none
    #edit-note
      display inline-block

  &.view
    .edit
      display none
    .view
      display block
    .thumbnail
      display block
    #add-note
      display none
    #edit-note
      display none

  .thumbnail
    margin 0 auto
    width 150px
    height 150px
    background-repeat no-repeat

  .comments-header
    span.on
      display none
    span.off
      display inline
    &.expanded
      span.on
        display inline
      span.off
        display none

#comment-creator
  display none

#context-creator
  display none
  position absolute
  background #eee
  padding 1em
  right 0

  &.active
    display block

#notes-list
  height 250px
  overflow-y scroll

#collaborators
  width 100px
  margin-left 0

  .collaborator
    display none
    padding 2px
    margin 0 0 2px 0
    border 1px solid black
    width 100%
    background-size contain
    background-repeat no-repeat
    color white
    font-size 9px
    line-height 1em
    text-align right
    box-sizing border-box
    cursor pointer

#authorizeButton[disabled]
  display none

.comments
  margin 0

  li
    float left
    width 100%
    display none
    padding-left 10px
    border-bottom 1px solid #ee
    list-style none
    color white
    font-size 11px

    .display-name
      display inline-block
      float right
      margin 0 5px

    .created
      display inline-block
      float right
      margin 0 5px

svg
  &.marker
    cursor crosshair
  &.move
    cursor move
  &.delete
    cursor not-allowed
